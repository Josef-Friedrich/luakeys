{
  "files.exclude": {
    "**/_minted*/": true,
    "**/*.aux": true,
    "**/*.fdb_latexmk": true,
    "**/*.fls": true,
    "**/*.glo": true,
    "**/*.gls": true,
    "**/*.hd": true,
    "**/*.idx": true,
    "**/*.ilg": true,
    "**/*.ind": true,
    "**/*.log": true,
    "**/*.out": true,
    "**/*.pdf": true,
    "**/*.synctex.gz": true,
    "**/*.synctex": true,
    "**/*.tar.gz": true,
    "**/*.toc": true
  },
  "Lua.workspace.library": [
    "~/repos/tex/lua-api/library",
    "${addons}/busted/module/library",
    "${3rd}/luassert/library"
  ],
  "Lua.workspace.checkThirdParty": false,
  "latex-workshop.latex.autoBuild.run": "never",
  "[lua]": {
    "editor.tabSize": 2,
    "editor.rulers": [80]
  },
  "[latex]": {
    "editor.tabSize": 2,
    "editor.rulers": [72]
  }
}
